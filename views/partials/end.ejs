<script>
$(document).ready(function() {
    var path = window.location.pathname;
    $('.sidebar .nav-item.menu-items').each(function() {
        var $item = $(this);
        var href = $item.find('a.nav-link').attr('href');
        $item.removeClass('active');
        if (href === '/admin/add-movie' && path.includes('add-movie')) {
            $item.addClass('active');
        } else if (href === '/admin' && (path === '/admin' || path === '/admin/' || path.includes('edit-movie'))) {
            $item.addClass('active');
        }
    });
});

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamFlix - Movies</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="assets2/css/style.css">
    <link rel="shortcut icon" href="/assets/images/favicon.png" />
</head>

<body class="bg-black text-white">

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" style="background: linear-gradient(black, transparent);">
        <div class="container-fluid px-5">
            <a class="navbar-brand fw-bold text-danger fs-3" href="#">STREAMFLIX</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin">Admin Panel</a></li>
                </ul>
            </div>
        </div>
    </nav> 

    <div id="home-view" class="view-section active">

        <div id="hero-section" class="d-flex align-items-center text-white"
            style="height: 80vh; background-size: cover; background-position: center;">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 bg-dark bg-opacity-50 p-4 rounded backdrop-blur">
                        <span class="badge bg-danger mb-2">Featured</span>
                        <h1 class="display-3 fw-bold" id="hero-title">Loading...</h1>
                        <p class="lead" id="hero-desc">...</p>
                        <button class="btn btn-danger btn-lg me-2"><i class="fas fa-play"></i> Play</button>
                        <button class="btn btn-secondary btn-lg" onclick="showDetails(0)"><i
                                class="fas fa-info-circle"></i> More Info</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container py-5">
            <h2 class="mb-4 border-start border-4 border-danger ps-3">Trending Now</h2>
            <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-4" id="movie-grid">
                <% movies.map((movie, idx)=>{ %>
                    <div class="col">
                        <div class="card movie-card h-100 text-white" onclick="window.location.href='/desc/<%= movie.id %>'">
                            <img src="<%= movie.avatar %>" class="card-img-top" alt="<%= movie.name %>">
                            <div class="card-body p-2">
                                <h5 class="card-title text-truncate" style="font-size: 1rem;">
                                    <%= movie.name %>
                                </h5>
                                <div class="d-flex justify-content-between small text-secondary">
                                    <span>
                                        <%= movie.date %>
                                    </span>
                                    <span class="text-warning"><i class="fas fa-star"></i>
                                        <%= movie.ratings %>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <footer class="py-4 mt-5">
        <div class="container text-center text-secondary">
            <p class="mb-0">&copy; 2025 StreamFlix. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="assets2/js/main.js"></script>
</body>

</html>
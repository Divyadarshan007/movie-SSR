<%- include('./partials/start.ejs')%>
  <div class="main-panel">
    <div class="content-wrapper">
      <div class="page-header">
        <h3 class="page-title"> <i class="mdi mdi-movie-open text-primary mr-2"></i> All Movies </h3>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
            <li class="breadcrumb-item active" aria-current="page">Movies List</li>
          </ol>
        </nav>
      </div>
      <div class="row">
        <div class="col-12 grid-margin">
          <div class="card">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="card-title mb-0">Movies Collection</h4>
                <a href="/admin/add-movie" class="btn btn-primary btn-sm">
                  <i class="mdi mdi-plus"></i> Add New Movie
                </a>
              </div>
              <div class="table-responsive">
                <table class="table table-hover text-center">
                  <thead class="thead-dark">
                    <tr>
                      <th>#</th>
                      <th>Poster</th>
                      <th>Movie Name</th>
                      <th>Genre</th>
                      <th>Release Date</th>
                      <th>Rating</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% allMovie.map((movie, idx)=>{ %>
                      <tr>
                        <td class="align-middle"><%= idx+1 %></td>
                        <td class="align-middle">
                          <img src="/<%= movie.avatar %>" alt="<%= movie.name %>" style="width: 50px; height: 70px; object-fit: cover; border-radius: 4px;" />
                        </td>
                        <td class="align-middle font-weight-bold"><%= movie.name %></td>
                        <td class="align-middle">
                          <span class="badge badge-info"><%= movie.genre %></span>
                        </td>
                        <td class="align-middle"><%= movie.date %></td>
                        <td class="align-middle">
                          <span class="text-warning">
                            <% for(let i = 0; i < movie.ratings; i++) { %>
                              <i class="mdi mdi-star"></i>
                            <% } %>
                            <% for(let i = movie.ratings; i < 5; i++) { %>
                              <i class="mdi mdi-star-outline"></i>
                            <% } %>
                          </span>
                        </td>
                        <td class="align-middle">
                          <button class="btn btn-outline-success btn-sm mr-1" onclick="window.location.href='/admin/edit-movie/<%= movie.id %>'">
                            <i class="mdi mdi-pencil"></i> Edit
                          </button>
                          <button class="btn btn-outline-danger btn-sm" onclick="if(confirm('Are you sure you want to delete this movie?')) window.location.href='/admin/delete-movie/<%= movie.id %>'">
                            <i class="mdi mdi-delete"></i> Delete
                          </button>
                        </td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
              <% if(allMovie.length === 0) { %>
                <div class="text-center py-5">
                  <i class="mdi mdi-movie-off text-muted" style="font-size: 4rem;"></i>
                  <p class="text-muted mt-3">No movies found. Add your first movie!</p>
                  <a href="/admin/add-movie" class="btn btn-primary">Add Movie</a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <%- include('./partials/end.ejs')%>

